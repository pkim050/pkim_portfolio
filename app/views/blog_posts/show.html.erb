<div class="container mx-auto px-5 m-20">
  <%= render @blog_post %>

  <%= link_to "Back to blog posts", blog_posts_path %>

  <div class="max-w-sm rounded overflow-hidden shadow-lg"> # place this card blow the post body.
    <div class="px-6 py-4">
      <p class="font-bold text-xl mb-2">Comments</p>
      <%= simple_form_for([@blog_post, @blog_post.blog_comments.build]) do |f| %>
        <div class="form-group">
          <%= f.label 'New comment' %></br>
          <%= f.text_area :body, class: 'form-control' %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
        </div>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

  <%= render @blog_post.blog_comments %>

  <% if can? :create, @blog_posts %>
    <div>
      <%= link_to "Edit this blog post", edit_blog_post_path(@blog_post) %>
      <%= button_to "Destroy this blog post", @blog_post, method: :delete, data: { confirm: "Are you sure you want to delete #{@blog_post.title}?", turbo_confirm: "Are you sure you want to delete #{@blog_post.title}?" } %>
    </div>
  <% end %>
</div>
