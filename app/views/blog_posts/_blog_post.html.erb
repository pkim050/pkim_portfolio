<div id="<%= dom_id blog_post %>" class="break-all">
  <% if @blog_posts %>
    </br>
    <strong><%= blog_post.title&.capitalize %></strong>
    </br></br>
    <span class="line-clamp-3"><%= raw blog_post.body %></span>
    </br>
    <button>
      <%= link_to "Read more ->", blog_post, class: "underline" %>
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#bc2acf"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M17 12L7 12M17 12L13 16M17 12L13 8" stroke="#bf04ff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
    </button>
  <% else %>
    <strong class="flex justify-center"><%= blog_post.title&.capitalize %></strong>
    </br></br>
    <span class=""><%= raw blog_post.body %></span>
  <% end %>
  </br></br>
</div>
