<div class="card ml-5">
  <div class="card-body">
    <%= form_with(model: [@blog_post, @blog_comment]) do |f| %>
      <%= f.hidden_field :parent_id %>
      <div class="form-group">
        <%= f.label 'Reply' %>
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', post_path(@blog_post), class: 'btn btn-secondary' %>
    <% end %>
  </div>
</div>
