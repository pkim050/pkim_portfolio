<div class="rounded overflow-hidden shadow-lg">
  <div class="px-6 py-4">
    <strong><%= reply.user.username %></strong> Â· <%= distance_of_time_in_words_to_now(reply.created_at) %> ago
    <%= simple_format reply.body %>
    </br>
    <%= link_to 'Reply', new_blog_post_blog_comment_path(reply.blog_post, parent_id: reply.id), data: { turbo_stream: "reply-#{reply.id}" } %>
    <% if can? :edit, reply %>
      <%= link_to 'Edit', edit_blog_post_blog_comment_path(reply.blog_post, parent_id: reply.id), data: { turbo_stream: "reply-#{reply.id}" } %>
    <% end %>
    <% if can? :destroy, reply %>
      <%= link_to 'Delete', blog_post_blog_comment_path(reply.blog_post), data: { turbo_stream: "reply-#{reply.id}", turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete your comment?' } %>
    <% end %>
  </div>
</div>
<div id="replies-<%= reply.id %>" class="ml-12">
  <% if reply.replies.any? %>
    <% reply.replies.order('created_at desc').each do |nested_reply| %> 
      <%= render partial: 'blog_comments/reply', locals: { reply: nested_reply } %>
    <% end %>
  <% end %>
</div>
