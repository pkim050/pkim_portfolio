<% unless !blog_comment&.persisted? %>
  <div class="card">
    <div class="card-body">
      <%= blog_comment.body %>
      <%= link_to 'reply', new_blog_post_blog_comment_path(@blog_post, parent_id: blog_comment.id), remote: true, class: 'd-block' %>
    </div>
  </div>
  <% if blog_comment.replies.any? %>
    <% blog_comment.replies.each do |reply| %> 
      <%= render partial: 'blog_comments/reply', locals: { reply: reply } %>
    <% end %>
  <% end %>
<% end %>
