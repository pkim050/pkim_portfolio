<%= turbo_stream.replace "comment-body-#{blog_comment.id}" do %>
  <%= turbo_frame_tag "edit_blog_comment_#{blog_comment.id}" do %>
    <%= simple_form_for([blog_post, blog_comment]) do |f| %>
      <% if blog_comment.errors.any? %>
        <% flash.now[:error] = blog_comment.errors.full_messages %>
        <% blog_comment.errors.full_messages.each do |error| %>
          <strong class="text-red-500 flex justify-center items-center"><%= error %></strong>
        <% end %>
        </br>
      <% end %>
      <div class="form-group">
        <%= f.label 'Edit comment' %></br>
        <%= f.text_area :body, class: 'form-control w-full h-24' %>
      </div>
      <%= f.submit 'Submit', class: "py-2 px-6 bg-green-500 hover:bg-[#bf04ff] text-sm text-black font-bold rounded-xl transition duration-200" %>
      <%= link_to 'Cancel', blog_post_blog_comment_path(blog_post, id: blog_comment.id), class: "py-2 px-6 bg-red-500 hover:bg-[#bf04ff] text-sm text-black font-bold rounded-xl transition duration-200", data: { turbo_stream: "edit_blog_comment_#{blog_comment.id}" } %>
    <% end %>
  <% end %>
<% end %>
